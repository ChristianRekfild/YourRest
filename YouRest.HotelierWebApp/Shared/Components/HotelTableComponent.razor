<table class="table">
    <thead>
    <tr>
        <th scope="col">№</th>
        <th scope="col">Название отеля</th>
        <th scope="col">Уровень комфорта</th>
        <th scope="col">Управление</th>
    </tr>
    </thead>
    @foreach (HotelModel hotel in Hotels)
    {
        <tr class="tab_row">

            <th scope="row" @onclick="@( () => SelectedItem(hotel))">@(Hotels.IndexOf(hotel) + 1)</th>
            <td @onclick="@( () => SelectedItem(hotel))">@hotel.Name</td>
            <td @onclick="@( () => SelectedItem(hotel))">
                <RatingOfStarComponent CountOfStar="@hotel.Stars" />
            </td>
            <td>
                <ul class="control">
                    <li data-bs-toggle="tooltip"
                        data-bs-placement="left"
                        title="Редактировать"
                        @onclick="@NavigateToEdit"
                        @onmouseover="@MouseOverOfEditBtn"
                        @onmouseout="@MouseOutOfEditBtn">
                        <Icon class="@Edit" Size="IconSize.x4" Name="IconName.PencilFill" />
                    </li>
                    <li data-bs-toggle="tooltip"
                        data-bs-placement="right"
                        title="Удалить"
                        @onclick="() => OnRemove(hotel)"
                        @onmouseover="@MouseOverOfRemoveBtn"
                        @onmouseout="@MouseOutOfRemoveBtn">
                        <Icon class="@Remove" Size="IconSize.x4" Name="IconName.TrashFill" />
                    </li>
                </ul>
            </td>
        </tr>
    }
</table>
<style type="text/css">
    .tab_row:hover {@RowHoverStyle}
</style>