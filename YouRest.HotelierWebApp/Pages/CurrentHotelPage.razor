@page "/hotels/{CurrentHotelId:int}"
@using YouRest.HotelierWebApp.Data;
@attribute [Authorize]

<div class="hotel-title">
    <p class="hotel_title-name">@HotelViewModel.CurrentHotel.Name</p>
    <div class="hotel_title-rating">
        <p>Рейтинг</p>
        <Icon Name="IconName.HandThumbsUp" Color="IconColor.Primary" Size="IconSize.x5" />
        <RatingOfStarComponent CountOfStar="@HotelViewModel.CurrentHotel.Stars" />
    </div>
</div>

<div class="hotel-subtitle">
    <Icon Name="IconName.GeoAltFill" Color="IconColor.Primary" Size="IconSize.x6" />
    <p class="hotel_subtitle-address">@HotelViewModel.CurrentHotelModelForm.ZipCode @HotelViewModel.CurrentHotelModelForm.Country @HotelViewModel.CurrentHotelModelForm.Region @HotelViewModel.CurrentHotelModelForm.City @HotelViewModel.CurrentHotelModelForm.Address</p>
</div>
<div class="hotel-body">
    <div class="hotel_body-gallery">
        <div class="hotel_body_gallery-main">
            @if (HotelViewModel.CurrentHotelModelForm.ImagesForView?.Count >= 1)
            {
                <img src="@HotelViewModel.CurrentHotelModelForm.ImagesForView.ElementAt(0)" alt="main photo" />
            }
            else
            {
                <img class="border" src="/Images/hotel_default_2.png" alt="main photo" />
            }
            
        </div>
        <div class="hotel_body_gallery-first">
            @if (HotelViewModel.CurrentHotelModelForm.ImagesForView?.Count >= 2)
            {
                <img src="@HotelViewModel.CurrentHotelModelForm.ImagesForView.ElementAt(1)" alt="first photo" />
            }
            else
            {
                <img class="border" src="/Images/hotel_default_2.png" alt="first photo" />
            }
        </div>
        <div class="hotel_body_gallery-second">
            @if (HotelViewModel.CurrentHotelModelForm.ImagesForView?.Count >= 3)
            {
                <img src="@HotelViewModel.CurrentHotelModelForm.ImagesForView.ElementAt(2)" alt="second photo" />
            }
            else
            {
                <img class="border" src="/Images/hotel_default_2.png" alt="second photo" />
            }
        </div>
    </div>
</div>
